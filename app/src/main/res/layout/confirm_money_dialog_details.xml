<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_dialog_background"
    app:layout_anchorGravity="bottom"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/deposit_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEPOSIT ARRIVAL"
        android:textColor="@color/colorNiceGrey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/deposit_arrival_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instant"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/deposit_arrival"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/transfer_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TRANSFER FEE"
        android:textColor="@color/colorNiceGrey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deposit_arrival" />

    <TextView
        android:id="@+id/transfer_fee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.99"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/transfer_fee"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deposit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DEPOSIT AMOUNT"
        android:textColor="@color/colorNiceGrey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer_fee" />

    <TextView
        android:id="@+id/deposit_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$17.01"
        android:textColor="@color/colorBlack"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/deposit_amount"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>