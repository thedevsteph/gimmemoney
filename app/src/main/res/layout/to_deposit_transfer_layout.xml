<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/transfer_to_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rounded_square_green"
        android:padding="10dp"
        android:layout_margin="14dp"
        android:src="@drawable/ic_credit_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/to_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="To:"
        android:textSize="14dp"
        android:textColor="@color/colorGrey"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/transfer_to_image"
        app:layout_constraintTop_toTopOf="@id/transfer_to_image" />

    <TextView
        android:id="@+id/from_sender_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Jack Mass"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/transfer_to_image"
        app:layout_constraintTop_toBottomOf="@id/to_text" />

</androidx.constraintlayout.widget.ConstraintLayout>